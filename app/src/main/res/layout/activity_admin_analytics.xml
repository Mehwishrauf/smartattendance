<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analytics Dashboard"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="14dp"/>

    <TextView android:id="@+id/txtTeachers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Teachers: -" />

    <TextView android:id="@+id/txtStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Students: -"
        android:layout_marginTop="8dp"/>

    <TextView android:id="@+id/txtClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Classes: -"
        android:layout_marginTop="8dp"/>

    <TextView android:id="@+id/txtSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Sessions: -"
        android:layout_marginTop="8dp"/>

    <TextView android:id="@+id/txtAttendanceMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attendance Marks: -"
        android:layout_marginTop="8dp"/>

</LinearLayout>
