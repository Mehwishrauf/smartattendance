<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add / Manage Teachers"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etTeacherEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teacher email (add to pending)"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/btnAddPending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Pending Teacher"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teachers list (tap to enable/disable)"
        android:layout_marginTop="14dp"/>

    <ListView
        android:id="@+id/listTeachers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
</LinearLayout>
